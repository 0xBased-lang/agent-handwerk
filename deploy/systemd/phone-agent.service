[Unit]
Description=IT-Friends Handwerker Phone Agent
Documentation=https://github.com/it-friends/phone-agent
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/phone-agent

# Environment
Environment="PATH=/opt/phone-agent/venv/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/opt/phone-agent/.env

# Command
ExecStart=/opt/phone-agent/venv/bin/uvicorn phone_agent.main:app --host 0.0.0.0 --port 8080

# Restart policy
Restart=always
RestartSec=5

# Security
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
ReadWritePaths=/opt/phone-agent/data
PrivateTmp=yes

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=phone-agent

[Install]
WantedBy=multi-user.target
