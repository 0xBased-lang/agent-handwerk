<!--
    FreeSWITCH Event Socket Configuration for Phone Agent

    This enables the Event Socket Layer (ESL) interface that allows
    the phone-agent application to control FreeSWITCH.

    Security Notes:
    - Change the default password in production
    - Restrict listen-ip to localhost or internal network
    - Use ACLs to limit which IPs can connect
-->
<configuration name="event_socket.conf" description="Socket Client">
    <settings>
        <!-- Listen on localhost only by default (secure) -->
        <param name="nat-map" value="false"/>
        <param name="listen-ip" value="127.0.0.1"/>
        <param name="listen-port" value="8021"/>

        <!-- Password for ESL connections - CHANGE IN PRODUCTION -->
        <!-- Override with environment variable: FREESWITCH_ESL_PASSWORD -->
        <param name="password" value="${esl_password:-ClueCon}"/>

        <!-- Apply ACL for additional security -->
        <param name="apply-inbound-acl" value="loopback.auto"/>
    </settings>
</configuration>
